<div>
	<h1 class="text-primary pt-3">My PC</h1>
		<% if @pokemons.any?%>
		<h2 class="text-secondary">-</h2>
		<div class="row no-margin center-elements pb-5">
			<%@pokemons.each do |pokemon| %>
				<div class="card center card-width">
				   <h2 class="card-title text-primary pt-3"><%=pokemon.nickname%></h2>
				   <h2 class="card-title text-secondary pt-3"><%=pokemon.name%>  NÂº:<%=pokemon.num_pokedex%></h2>
				  <div class="card-body">
					<%=image_tag pokemon.image, title: pokemon.name, 
						class: "img-pokemon-index"%>
				    <div class="card-text"><%= pokemon.description%></div>
				    <div class="mb-3 mt-5">
				    	<%=link_to "Show", user_pokemon_path(user_id: current_user.id, id: pokemon.id), class:"btn button-primary p-3"%>
					</div>
				  </div>
				</div>
			<%end%>
		<% else %>
			<h2 class="text-secondary mt-5">You dont have any pokemons</h2>
			<p><%=link_to "Pokedex", user_pokedex_index_path(user_id: current_user.id), class:"btn button-primary p-3 mt-5"%></p>
		<% end %>	

</div>